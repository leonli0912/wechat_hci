<mvc:View controllerName="elearning_ui5.controller.CourseDetail"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:my="elearning_ui5.src.js" xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data">
	<html:style>
		.jobInfoPage{
		background:#f2f2f2;
		}

		.infoList{
		border-radius:5px;
		border:1px solid #eee;
		}

		.jobInfoItem{
		border-bottom:1px solid #eee;
		height:2rem;
		}

		.jobInfoItem
		.sapMSLITitleOnly{
		font-size:0.8rem;
		}

		.jobInfoItem .sapMSLIImgIcon{
		font-size:0.8rem;
		color:#009de0;
		}

		.jobInfoPanel .sapMIBar{
		background:#eee;
		margin-top:10px;
		border-top:1px solid #eee;
		}

		.jobInfoPanel .sapMIBar .sapMBarChild{
		width: 10rem;
		height: 100%;
		line-height: 3rem;
		border-bottom: 3px solid
		#009de0;
		}

		.jobInfoPanel
		.sapMPanelContent .sapMText{
		line-height:1.25rem;
		}

		.detailFooter{
		padding:0px 1rem 0px 0px;
		}
	</html:style>
	<Page title="Course" id="jobDetailPage" class="jobInfoPage"
		showNavButton="true" navButtonPress="onButtonPress">

		<Panel id="jobDetailInfo">
		    <StandardListItem title="Item" 
		                       info="{componentTypeID} {formattedRevisionDate} 
		                             {title} {revisionNumber}">
			</StandardListItem>
			<StandardListItem title="Course" info="{componentID}">
			</StandardListItem>
			<StandardListItem title="Scheduled ID" info="{scheduledID}">
			</StandardListItem>
			
			<StandardListItem title="Instructor" info="{instructorName}">
			</StandardListItem>
			<StandardListItem title="Complete Date"	info="{formattedRevisionDate}">
			</StandardListItem>
			<StandardListItem title="Complete Status" 
			                   info="{completionStatusID} ({status})">
			</StandardListItem>
			<StandardListItem title="Total Hours" info="{totalHours}">
			</StandardListItem>
			<StandardListItem title="Contact Hours" info="{contactHours}">
			</StandardListItem>
			<StandardListItem title="Credit Hours" info="{creditHours}">
			</StandardListItem>
			<StandardListItem title="CPE Hours" info="{cpeHours}">
			</StandardListItem>
			<StandardListItem title="Grade" info="{grade}">
			</StandardListItem>
			<StandardListItem title="Course Type" info="{componentTypeID}">
			</StandardListItem>			
			
		</Panel>
		<Toolbar height="3rem" >
		<Title text="Course Description">
		</Title>
		</Toolbar>
		<Panel class="jobInfoPanel">
			<Text text="test test test" class="sapUiSmallMarginTop">
			</Text>
		</Panel>
	</Page>
</mvc:View>
